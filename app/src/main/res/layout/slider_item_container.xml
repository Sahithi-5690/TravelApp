<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for ImageView element with Android XML namespace declaration -->
<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
    
    <!-- Set width to match the parent container's width -->
    android:layout_width="match_parent"
    
    <!-- Set height to match the parent container's height -->
    android:layout_height="match_parent"
    
    <!-- Ensure a minimum height of 160dp for the ImageView to maintain visibility -->
    android:minHeight="160dp"
    
    <!-- Unique ID for the ImageView to enable reference in the code -->
    android:id="@+id/imageSlide">
    
</ImageView>
